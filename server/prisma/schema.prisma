generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model EventLog {
  id           String   @id
  userId       String
  deviceId     String
  entityType   String
  entityId     String
  op           String
  payload      Json
  createdAt    DateTime @default(now())
  schemaVersion Int

  @@index([userId, createdAt])
  @@index([userId, entityType, entityId])
}

model ReadingPosition {
  userId      String
  bookId      String
  chapterHref String?
  anchor      String?
  offset      Int?
  updatedAt   DateTime

  @@id([userId, bookId])
  @@index([userId, updatedAt])
}

model SyncCursor {
  userId    String
  deviceId  String
  lastCursor String
  updatedAt DateTime @default(now())

  @@id([userId, deviceId])
}
